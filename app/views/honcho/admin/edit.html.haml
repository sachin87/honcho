%h1 
  = "Editing #{resource_name.singularize}"
= simple_form_for(@resource, url: honcho.post_path, method: :patch) do |f|
  - f.object.class.table_attributes.each do |attribute|
    = f.input attribute.to_sym
  = f.button :submit
= link_to 'Show', honcho.send("#{singularize_resource}_path",@resource.id)
|
= link_to 'Back', honcho.send("#{resource_name.downcase}_path")